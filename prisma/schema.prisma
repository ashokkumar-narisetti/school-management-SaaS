generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


enum Role {
  SUPER_ADMIN
  SCHOOL_ADMIN
  TEACHER
  PARENT
}

enum AttendanceStatus {
  PRESENT
  ABSENT
}

enum SchoolStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

model School {
  id        String       @id @default(uuid())
  name      String
  address   String?
  isActive  Boolean      @default(true)
  status    SchoolStatus @default(ACTIVE)
  createdAt DateTime     @default(now())

  users    User[]
  students Student[]
  classes  Class[]
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  passwordHash String
  role         Role
  active       Boolean  @default(true)
  mustChangePassword Boolean  @default(false)
  schoolId     String?
  createdAt    DateTime @default(now())

  school School? @relation(fields: [schoolId], references: [id])

  // ✅ Parent → Students (MATCHING NAME)
  students Student[] @relation("ParentStudents")

  // ✅ Audit logs
  auditLogs AuditLog[] @relation("UserAuditLogs")
}

model Class {
  id       String @id @default(uuid())
  schoolId String
  name     String

  school   School    @relation(fields: [schoolId], references: [id])
  students Student[]
}

model Student {
  id           String @id @default(uuid())
  fullName     String
  classId      String
  parentUserId String

  class Class @relation(fields: [classId], references: [id])

  // ✅ Student → Parent (MATCHING NAME)
  parent User @relation("ParentStudents", fields: [parentUserId], references: [id])

  attendance Attendance[]
  school     School?      @relation(fields: [schoolId], references: [id])
  schoolId   String?
  marks      Mark[]
}

model Attendance {
  id        String           @id @default(uuid())
  schoolId  String
  studentId String
  date      DateTime
  status    AttendanceStatus

  student Student @relation(fields: [studentId], references: [id])
}

model Homework {
  id        String   @id @default(uuid())
  schoolId  String
  classId   String
  subject   String
  content   String
  createdAt DateTime @default(now())
}

model Mark {
  id        String @id @default(uuid())
  schoolId  String
  studentId String
  subject   String
  examName  String
  score     Int

  student Student @relation(fields: [studentId], references: [id])
}

enum AuditAction {
  SCHOOL_ENABLED
  SCHOOL_DISABLED
  USER_ENABLED
  USER_DISABLED
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  actorId   String
  createdAt DateTime @default(now())

  actor User @relation("UserAuditLogs", fields: [actorId], references: [id])
}
